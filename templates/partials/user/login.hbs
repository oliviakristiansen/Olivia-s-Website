<h2>Login</h2>

{{#if message.error}}
    <div class="error notice">
        <p>{{ message.error }}</p>
    </div>
{{/if}}

{{#if message.success}}
    <div class = "success notice">
        <p>{{ message.success }}</p>
    </div>
{{/if}}

<div class="container">
    <form class="form-horizontal" method = "POST" action="/user/login" enctype="application/x-www-form-urlencoded">
        <div class="form-group">
            <label class="control-label col-sm-2" for="username">Username: </label>
            <div class="col-sm-10">
                <input class="form-control" name="username" type="text" placeholder="Enter username">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="password">Password: </label>
            <div class="col-sm-10">
                <input class="form-control" name="password" type="password" placeholder="Enter password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-default" type="submit">Login</button>
            </div>
        </div>
</form>

<p><a href="/user/help">Forgot Password?</a></p>
